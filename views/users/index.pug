extends ../layout/layoutBootstrap
block formOfNav
    form(action="/users/search", method="GET", class="form-inline my-2 my-lg-0")
        input(class="form-control mr-sm-2 ml-auto", type="search", placeholder="Search User", aria-label="Search", name="q")
        button(class="btn btn-primary my-2 my-sm-0", type="submit") Search
block content
    h1
        span.mr-3 User
        a.btn.btn-primary(href='/users/create') New
    .d-flex.align-items-center
        table.table
            tr
                th Avatar
                th Name
                th Phone
                th Action
            each user in users  
                tr
                    td
                        img(src=user.avatar, width="64", class="img_avatar_user")
                    td= user.name
                    td= user.phone
                    td
                        a.btn.btn-light(href= '/users/' + user.id) View