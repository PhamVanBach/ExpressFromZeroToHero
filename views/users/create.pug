extends ../layout/layoutBootstrap
block content
    h1 Create Users

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="POST", class="formsCreate")
        .form-group   
            label(for="inputName") Name
            input#inputName.form-control(name="name", type="text", placeholder="Name Of User", value=values ? values.name : '')
           
        .form-group    
            label(for="inputPhone") Phone
            input#inputPhone.form-control(name="phone", type="text", placeholder="Phone Of User", value = values ? values.phone : '')
    
        button.btn.btn-primary Create
